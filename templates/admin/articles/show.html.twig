{% extends "base/base_admin.html.twig" %}

{% block body %}
    <h1>Article de {{article.auteur}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Auteur</th>
                <td>{{ article.auteur }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
                </tr>
            <tr>
                <th>Creer le</th>
                <td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.images }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('articles_index') }}">retourner Ã  la liste</a>

    <a class="btn btn-primary" href="{{ path('articles_edit', {'id': article.id}) }}">Editer</a>

    <div class="form-check-inline">
        {{ include('admin/articles/_delete_form.html.twig') }}
    </div>
    
{% endblock %}
