{% extends 'base/base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container">
    <h1 class="h1 mt-5 mb-3">Toutes nos categories</h1>
    <div class="row">
        {% for categorie in categories %}
        <div class="card-group">
            
                <div class="card bg-light text-dark mb-3">
                    <div class="card-body ">
                        <h5 class="card-title">{{categorie.titre}}</h5>
                        <p class="card-text">{{categorie.description}}</p>
                    </div>
                    <div class="card-footer bg-transparent">Ecrit le {{categorie.createdAt|date("d/m/Y")}} Ã 
                        {{categorie.createdAt|date("H:i")}}
                    </div>
                    <a href="{{path('categorie_show_article', {'id': categorie.id})}}"  class="btn btn-success text-center">Voir tout les articles de cette categorie</a>
                </div>
            
        </div>
        {% endfor %}
    </div>
    <div class="d-flex justify-content-center">
        {% do categories.setPageRange(4) %}
        {{ knp_pagination_render(categories, 'base/includes/pagination.html.twig') }}
    </div>
</div>
{% endblock %}