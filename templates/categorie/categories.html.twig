{% extends 'base/base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container">
    <h1 class="h1 mt-5 mb-3">Toutes nos categories</h1>
    <div class="row">
        {% for categorie in categories %}
        <div class="card-group">
            
                <div class="card bg-light text-dark mb-3">
                    <div class="card-body ">
                        <h5 class="card-title">{{categorie.titre}}</h5>
                        <p class="card-text">{{categorie.description}}</p>
                    </div>
                    <div class="card-footer bg-transparent">Ecrit le {{categorie.createdAt|date("d/m/Y")}} Ã 
                        {{categorie.createdAt|date("H:i")}}
                    </div>
                    <input type="submit" value="Voir tout les articles de cette categorie"
                        class="btn btn-success text-center">
                </div>
            
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}