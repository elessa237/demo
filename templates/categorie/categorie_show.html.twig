{% extends "base/base.html.twig" %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="container">
    <h1 class="h1 mt-5 mb-3">Tout les articles de la categorie {{categorie.titre}}</h1>
    <div class="row">
        {% for article in articles %}
        <div class="col-12 mb-3">
            <div class="card-group">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><small>Ecrit par</small> {{ article.auteur}}</h5>
                        <p class="card-text">{{ article.contenu|u.truncate(100,'...',false)}}</p>
                        <a href="{{path('article_show',{'id':article.id})}}" class="btn btn-primary float-end">Lire la
                            suite</a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}