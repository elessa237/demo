{% extends 'base/base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container">
    <div class="row">

        {% for article in articles %}
        <div class="col-4">
            <div class="card-group">
                <div class="card" style="width: 18rem;">
                    <img src="https://via.placeholder.com/250x250" class="card-img-top" alt="...">
                    <div class="card-body">
                        <p class="card-text">{{article.contenu | u.truncate(100, '...', false)}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">écrit par {{article.auteur}} le {{article.createdAt |
                            date("d/m/Y")}} à
                            {{article.createdAt | date("H:m")}}</li>
                    </ul>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<div class="container">
    <div class="row">
        {% for categorie in categories %}
        <div class="col-4">
            <div class="card border-primary mt-3" style="max-width: 18rem;">
                <div class="card-header">{{categorie.titre}}</div>
                <div class="card-body text-primary">
                    <h5 class="card-title">{{categorie.createdAt | date("d/m/Y")}}</h5>
                    <p class="card-text">{{categorie.description}}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}