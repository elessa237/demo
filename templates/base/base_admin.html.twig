<!DOCTYPE html>
<html lang="fr">

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{path('admin')}}">Admin Demo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    {% if app.user %}  
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-center">
                        <li class="nav-item">
                            <a class="nav-link {% if current_page is defined and current_page == 'articles' %} active{% endif %}" href="{{path('articles_index')}}">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_page is defined and current_page == 'categories' %} active{% endif %}" href="{{path('categories_index')}}">Categories</a>
                        </li>
                        {#<li class="nav-item">
                            <a class="nav-link" href="{{path('create_article')}}">Creer un article</a>
                        </li>#}
                    </ul>
                    {% endif %}
                </div>
            </div>
        </nav>
        {% if app.user %}
        <div class="mb-3 me-3 d-flex justify-content-end">
            {{ app.user.username }}, <a class="link-danger" href="{{ path('app_logout') }}"> Deconnexion</a>
        </div>
        {% endif %}
        {% block body %}{% endblock %}
    </body>

</html>
{% block javascripts %}
{{ encore_entry_script_tags('app') }}
{% endblock %}